<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.mmk.assicurazioneai.ui.features.camera.CameraViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.features.camera.CameraFragment">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#000000"
            android:paddingStart="16dp"
            android:paddingTop="24dp"
            android:paddingEnd="16dp"
            android:paddingBottom="24dp"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:src="@tools:sample/backgrounds/scenic" />

        <androidx.camera.view.PreviewView
            android:id="@+id/cameraView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.mmk.assicurazioneai.utils.widgets.RectOverlayView
            android:id="@+id/rectangleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/capturePhotoBtn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            visibility="@{viewModel.imagePath==null}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="32dp"
            android:insetTop="0dp"

            android:insetBottom="0dp"
            android:minHeight="56dp"
            android:paddingStart="32dp"

            android:paddingEnd="32dp"
            android:text="@string/txt_btn_capture_photo"
            android:textColor="@color/white"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_camera"
            app:iconTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toEndOf="@+id/flashImageButton"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/flashImageButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            visibility="@{viewModel.imagePath==null}"
            android:layout_width="56dp"

            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="32dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:onClick="@{() -> viewModel.changeFlashMode()}"
            android:textColor="@color/white"
            app:cornerRadius="12dp"
            app:icon="@{viewModel.isFlashOn ? @drawable/ic_flash_on: @drawable/ic_flash_off}"
            app:iconTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp" />


        <com.mmk.assicurazioneai.utils.widgets.ProgressView
            android:id="@+id/progressView"
            showOnLoading="@{viewModel.sendingImageUiState}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="48dp"
            android:scaleX="0"
            android:scaleY="0"
            app:description="@string/description_progress"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@string/title_progress" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>